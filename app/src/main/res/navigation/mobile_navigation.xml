<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.rundgrun.stairs.ui.configuration.ConfigurationFragment"
        android:label="@string/title_configuration"
        tools:layout="@layout/fragment_configuration" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.rundgrun.stairs.ui.presentation.PresentationView"
        android:label="@string/title_presentation"
        tools:layout="@layout/fragment_presentation" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.rundgrun.stairs.ui.notifications.NotificationsFragment"
        android:label="@string/title_parameters"
        tools:layout="@layout/fragment_notifications" />
</navigation>